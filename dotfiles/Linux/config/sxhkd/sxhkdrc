# terminal emulator
super + Return
    alacritty

# program launcher
super + @space
	rofi -show drun

# windows list (all desktops)
super + w
	rofi -show window

# file explorer
super + e
	thunar

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# close and kill
super + {c,k}
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest node
super + g
	bspc node -s biggest

# next window in current desktop
super + Tab
	bspc node -f next.local

# next window in any desktop
super + shift + Tab
	bspc node -f next

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}
